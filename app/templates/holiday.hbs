    {{#wrap 'layout'}}
        <script>require('holiday');</script>
        <div class="toolbar">
            <div class="row">
                Welcome {{firstname}} <a href="/logout">logout</a>

                {{#if isAdmin}}
                    <div id="login-admin" class="two columns pull-right">
                        <a href="/admin"><i class="icon-key"></i></a>
                    </div>
                {{/if}}
            </div>
        </div>

        <div class="view-container"
            data-view="request"
            data-template="holiday/request"
        ></div>

        <div class="view-container" data-view="_sending">
            <div class="container">
                <h3>Sending request...</h3>
            </div>
        </div>

        <div class="view-container"
            data-view="current"
            data-template="holiday/current"
        ></div>
    {{/wrap}}
